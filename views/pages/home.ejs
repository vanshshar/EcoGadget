<% layout("../layout/boilerplate.ejs") -%>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4CAF50;
            --secondary-color: #45a049;
        }
        .bg-primary-gradient {
            background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
        }
        .text-primary-custom {
            color: var(--primary-color);
        }
        .btn-primary-custom {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        .btn-primary-custom:hover {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
        }
        .joinBtn{
            /* margin:2rem; */
            font-size: 1.35rem;
        }
        .link{
            text-decoration: none;
            outline: none;
            color: black;
        }
        .hover-card:hover{
            transform: scale(1.03);
        }
    </style>
</head>
<body>

    <main>
        <!-- Hero Section -->
        <section class="bg-primary-gradient text-white py-5">
            <div class="container text-center">
                <h1 class="display-4 fw-bold mb-4">Revolutionizing E-Waste Management</h1>
                <p class="lead mb-4">Join our platform to buy, sell, borrow, or repair electronics and contribute to a sustainable future.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="#services" class="btn btn-light btn-lg">Explore Services</a>
                    <a href="/request-battery" class="btn btn-outline-light btn-lg">Join Now</a>
                </div>
            </div>
        </section>

        <!-- About Us Section -->
        <section id="about" class="py-5">
            <div class="container">
                <h2 class="text-center mb-5">Who We Are</h2>
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <h3>Our Mission</h3>
                        <p>At EcoGadget, we're committed to reducing e-waste and promoting sustainable electronics use. Our platform connects users to buy, sell, borrow, and repair electronics, giving new life to devices and minimizing environmental impact.</p>
                    </div>
                    <div class="col-md-6 mb-4">
                        <h3>Our Approach</h3>
                        <p>We specialize in recycling unusable batteries and refining black mass into environmentally friendly applications. By choosing our platform, you're contributing to a circular economy and a cleaner future.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section id="services" class="py-5 bg-light">
            <div class="container">
                <h2 class="text-center mb-5">Our Services</h2>
                <div class="row">
                    <div class="col-md-3 mb-4 hover-card">
                        <div class="card h-100 text-center">
                            <a href="/products" class="link">
                            <div class="card-body">
                                <i class="fas fa-shopping-cart fa-3x text-primary-custom mb-3"></i>
                                <h4 class="card-title">Buy</h4>
                                <p class="card-text">Purchase pre-owned electronics from sellers in your area.</p>
                            </div>
                        </a>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4 hover-card">
                        <div class="card h-100 text-center">
                            <a href="/sell"class="link">
                            <div class="card-body">
                                <i class="fas fa-tag fa-3x text-primary-custom mb-3"></i>
                                <h4 class="card-title">Sell</h4>
                                <p class="card-text">List your unused electronics for sale to local buyers.</p>
                            </div>
                        </a>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4 hover-card">
                        <div class="card h-100 text-center">
                            <a href="/subscription" class="link">
                            <div class="card-body">
                                <i class="fas fa-handshake fa-3x text-primary-custom mb-3"></i>
                                <h4 class="card-title">Borrow</h4>
                                <p class="card-text">Rent electronics for short-term use from community members.</p>
                            </div>
                        </a>
                        </div>
                    </div>
                    <div class="col-md-3 mb-4 hover-card">
                        <div class="card h-100 text-center">
                            <a href="/repair" class="link">
                            <div class="card-body">
                                <i class="fas fa-tools fa-3x text-primary-custom mb-3"></i>
                                <h4 class="card-title">Repair</h4>
                                <p class="card-text">Request repairs for your devices from certified technicians.</p>
                            </div>
                        </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Environmental Impact Section -->
        <section id="impact" class="py-5">
            <div class="container text-center">
                <h2 class="mb-5">Our Environmental Impact</h2>
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <i class="fas fa-battery-full fa-3x text-primary-custom mb-3"></i>
                                <h4 class="card-title">50,000+</h4>
                                <p class="card-text">Batteries Recycled</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <i class="fas fa-dumpster fa-3x text-primary-custom mb-3"></i>
                                <h4 class="card-title">500 tons</h4>
                                <p class="card-text">E-Waste Diverted</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <i class="fas fa-cloud fa-3x text-primary-custom mb-3"></i>
                                <h4 class="card-title">10,000 tons</h4>
                                <p class="card-text">CO2 Emissions Prevented</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Battery Recycling Section -->
        <section class="py-5 bg-light">
            <div class="container">
                <h2 class="text-center mb-5">Innovative Battery Recycling</h2>
                <div class="row align-items-center">
                    <div class="col-md-6 mb-4">
                        <img src="/assets/battery_saviour.png" alt="Battery Recycling Process" class="img-fluid rounded-lg">
                    </div>
                    <div class="col-md-6 mb-4">
                        <h3>Black Mass Refinement</h3>
                        <p>Our cutting-edge technology allows us to refine battery black mass into valuable materials that can be reused in new batteries and other applications. This process significantly reduces the environmental impact of battery disposal and conserves precious resources.</p>
                        <ul>
                            <li>Recover rare earth metals</li>
                            <li>Reduce landfill waste</li>
                            <li>Lower carbon footprint of battery production</li>
                            
                        </ul>
                        <form action="/join-revolution" method="GET">
                            <button type="submit" class="btn btn-outline-success joinBtn">Join Now</button>
                        </form>
                    </div>
                    
                </div>
            </div>
        </section>

        <!-- Call to Action Section -->
        <section class="py-5 bg-primary-gradient text-white">
            <div class="container text-center">
                <h2 class="mb-4">Join Our E-Waste Revolution</h2>
                <p class="lead mb-4">Start buying, selling, borrowing, and repairing electronics responsibly today.</p>
                <a href="/signup" class="btn btn-light btn-lg">Sign Up Now</a>
            </div>
        </section>
    </main>

    <footer class="bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h4>Quick Links</h4>
                    <ul class="list-unstyled">
                        <li><a href="#about" class="text-white">About Us</a></li>
                        <li><a href="#services" class="text-white">Our Services</a></li>
                        <li><a href="#impact" class="text-white">Environmental Impact</a></li>
                        <li><a href="#" class="text-white">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h4>Contact</h4>
                    <p>Email: info@ecogadget.com</p>
                    <p>Phone: (123) 456-7890</p>
                    <p>Address: 123, Sector-68, Mohali, India</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h4>Stay Connected</h4>
                    <p>Follow us for the latest updates and eco-tips.</p>
                    <div class="mt-3">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>
            <hr class="mt-4 mb-3">
            <p class="text-center mb-0">&copy; 2024 EcoGadget. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>